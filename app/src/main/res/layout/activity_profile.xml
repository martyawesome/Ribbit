<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_profile_horizontal_margin"
    android:paddingRight="@dimen/activity_profile_horizontal_margin"
    android:paddingBottom="@dimen/activity_profile_vertical_margin"
    android:paddingTop="@dimen/activity_profile_vertical_margin"
    tools:context="com.martyawesome.smarty.app.ui.ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_empty"
                android:layout_marginBottom="@dimen/login_vertical_margin" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/lightest_grey">

            <Button
                android:id="@+id/editProfileButton"
                android:text="@string/edit_profile"
                style="@style/AuthButton"
                android:layout_margin="0dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:background="@drawable/button_custom_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:background="@color/lightest_grey">

            <TextView
                android:id="@+id/username"
                android:text="Username"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                style="@style/Profile"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/profile_value_vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/firstName"
                    android:text="First Name"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    style="@style/Profile" />

                <TextView
                    android:id="@+id/lastName"
                    android:text="Last Name"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    style="@style/Profile" />
            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:text="Email"
                style="@style/Profile" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
